@model PersonnalisationViewModel

@{
    ViewData["Title"] = "Personnalisation pour : " + ViewData["NomPeluche"];
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Customize" method="post" class="mt-4">
    <input type="hidden" asp-for="PelucheId" />

    <div class="mb-3">
        <label asp-for="NomBrode" class="form-label"></label>
        <input asp-for="NomBrode" class="form-control" />
        <span asp-validation-for="NomBrode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Couleur" class="form-label"></label>
        <select asp-for="Couleur" class="form-select">
            <option value="">-- Choisissez une couleur --</option>
            <option value="Rouge">Rouge</option>
            <option value="Bleu">Bleu</option>
            <option value="Vert">Vert</option>
            <option value="Jaune">Jaune</option>
            <option value="Rose">Rose</option>
        </select>
        <span asp-validation-for="Couleur" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TypeCouture" class="form-label"></label>
        <select asp-for="TypeCouture" class="form-select">
            <option value="">-- Choisissez un type de couture --</option>
            <option value="Classique">Classique</option>
            <option value="Double">Double</option>
            <option value="Fantaisie">Fantaisie</option>
        </select>
        <span asp-validation-for="TypeCouture" class="text-danger"></span>
    </div>

    <p><a href="/Shop/Index">Retour</a></p>
    <button type="submit" class="btn btn-success">Ajouter au panier</button>
</form>
